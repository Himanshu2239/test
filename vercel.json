{
  "version": 2,
  "buildCommand": "./build-script.sh",
  "outputDirectory": "dist/client",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(assets/.+)", "destination": "/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}