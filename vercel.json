{
  "version": 2,
  "buildCommand": "bash build-vercel.sh",
  "outputDirectory": "dist/public",
  "functions": {
    "api/[...slug].js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...slug].js" },
    { "src": "/(.*)",      "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGO_DB": "@mongo_db",
    "SESSION_SECRET": "@session_secret"
  }
}
