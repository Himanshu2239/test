{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "api/[...slug].cjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...slug].js" },
    { "src": "/(.*)",      "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV":       "production",
    "MONGO_DB":       "MONGO_DB",
    "SESSION_SECRET": "SESSION_SECRET"
  }
}
